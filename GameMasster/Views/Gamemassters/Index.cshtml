
@model GameMasster.Models.GameGenreViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] Game Masster</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!--bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="~/css/Styleloader.css" rel="stylesheet" />
    <link href="~/css/Style.css" rel="stylesheet" />
    <!-- custom css file link  -->


</head>
<body class="preloading">
    <div class="loader">
        <img src="https://c.tenor.com/6nylp48pfJEAAAAC/controller-game.gif">
    </div>

    <!-- header section starts  -->

    <header class="header">

        <a class="logo" asp-area="" asp-controller="Gamemassters" asp-action="admin">
            <img src="https://i.imgur.com/5bIRVYF.png" alt="logo">
        </a>

        <nav class="navbar">
            <a href="#carouselExampleIndicators">home</a>
            <a href="#loli">điều khoản</a>
            <a href="#menu">menu</a>
            <a href="#top-3-game">Game Hot</a>
            <a href="#support">support</a>
        </nav>

        <div class="icons">
            <div class="fas fa-search" id="search-btn"></div>
            <div class="fas fa-bars" id="menu-btn"></div>
        </div>

        <div class="search-form">
            <input type="search" id="search-box" placeholder="search here...">
            <label for="search-box" class="fas fa-search"></label>
        </div>

    </header>

    <!-- header section ends -->
    <!-- home section starts  -->


    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://www.gameshub.com/wp-content/uploads/sites/5/2021/11/elden-ring-hands-on-preview-16.jpg?w=1024" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://i.ytimg.com/vi/xx8kQ4s5hCY/maxresdefault.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://cdn-5e232c75f911c8096c0b5a1f.closte.com/wp-content/uploads/2015/02/Assassins-Creed-Unity.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>



    <section class="loli" id="loli">

        <h1 class="heading">Black <span>AiT</span>  </h1>

        <div class="row">

            <div class="image">
                <img src="https://i.imgur.com/5bIRVYF.png" alt="">
            </div>

            <div class="content">
                <h3>Game Masster</h3>
                <p>game là một bộ môn thể thao điện tử và giải trí rất hấp dẫn</p>
                <p>bất kể ai cũng có thể chơi game miễn là nó phù hợp với lứa tuổi của bạn (trẻ em dưới 18 tuổi không nên chơi game có gắn tag 18+).</p>
                <p>nhấn vào nút xem thêm để xem thêm nhiều game hơn trong web</p>
                <a class="btn" asp-area="" asp-controller="Gamemassters" asp-action="menu"> Xem thêm </a>
            </div>

        </div>

    </section>

    <!-- about section ends -->
    <!-- menu section starts  -->

    <section class="menu" id="menu">

        <h1 class="heading"> menu <span>game</span> </h1>
        
        <div class="box-container">
            @foreach (var item in Model.Game)
            {

                <div class="box">
                    <img src="@item.Link" alt="">
                   
                    <div class="price">@item.Title</div>
                    <p>NSX | @item.Genre</p>
                    <p>NPH | @item.ReleaseDate</p>
                    <p>@item.Rating</p>
                    <h1 class="heading">@item.Price</h1>

                    <a class="btn" asp-area="" asp-controller="Home" asp-action="Revolution"> Tải Game </a>
                </div>
            }
        </div>
        


    </section>

    <!-- menu section ends -->

    <section class="top-3-game" id="top-3-game">

        <h1 class="heading"> Game <span>Đang hot</span> </h1>
        <p> "dưới đây là 3 game mà tôi thấy hay nhất nhưng chưa được chơi do máy tôi có cấu hình khiêm tốn (0-!)"</p>
        <div class="box-container">
            <div class="box">
                <div class="image">
                    <img src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/i/3367fa99-0ba6-454c-b947-683f1a9f896d/ddpbg81-8ffe0aa4-0889-4dd9-b040-b1eb93c48efa.png" alt="">
                </div>
                <p>NSX | CD Projekt RED</p>
                <p>NPH | 18/3/2015</p>
                <p>★ ★ ★ ★ ★</p>
                <h1 class="heading">100000 $</h1>
                <div class="content">
                    <a class="btn" asp-area="" asp-controller="Home" asp-action="TheWitcher3"> Tải Game </a>
                </div>
            </div>
            <div class="box">
                <div class="image">
                    <img src="https://savekeys.net/wp-content/uploads/2020/07/middle-earth-shadow-of-war.jpeg" alt="">
                </div>
                <p>NSX | Warner Bros</p>
                <p>NPH | 27/9/2017</p>
                <p>★ ★ ★ ★ ★</p>
                <h1 class="heading">40000 $</h1>
                <div class="content">
                    <a class="btn" asp-area="" asp-controller="Home" asp-action="ShadowOfWar"> Tải Game </a>
                </div>
            </div>
            <div class="box">
                <div class="image">
                    <img src="https://i.redd.it/ww191racsly71.jpg" alt="">
                </div>
                <p>NSX | FromSoftware</p>
                <p>NPH | 25/2/2022</p>
                <p>★ ★ ★ ★ ★</p>
                <h1 class="heading">1720000 $</h1>
                <div class="content">
                    <a class="btn" asp-area="" asp-controller="Home" asp-action="EldenRing"> Tải Game </a>
                </div>
            </div>
        </div>

    </section>

    <!-- support section starts  -->

    <section class="support" id="support">

        <h1 class="heading">sup<span>port</span></h1>
        <p>
            "để có một trải nghiệm game tốt hơn, dưới đây tôi xin cung cấp một số web mod game và cheat game mà tôi tin tưởng sử dụng"
            <div class="box-container">

                <div class="box">
                    <div class="image">
                        <img src="https://upload.wikimedia.org/wikipedia/en/2/20/Nexusmods_screenshot.png" alt="">
                    </div>
                    <div class="content">
                        <a href="https://www.nexusmods.com/" class="title">nexus mods</a>
                        <p>đây là trang web mod game mà mình hay vào. bằng việc đăng ký tài khoản nexus mod, bạn có thể tải bất cứ bản mod game nào mà bạn thích. với hệ thống mod và hướng dẫn đầy đủ, bạn có thể dễ dàng mod bất cứ tựa game nào bạn thích  .</p>
                    </div>
                </div>

                <div class="box">
                    <div class="image">
                        <img src="https://taiwebs.com/upload/images/upload-image-2/images/cheat-engine.png" alt="">
                    </div>
                    <div class="content">
                        <a href="https://www.cheatengine.org/downloads.php" class="title">cheat engine</a>
                        <p>vâng! như cái tên của nó, ứng dụng này dùng để cheat game, nói đúng hơn là bạn có thể thêm tiền vào túi hoặc mua vật phẩm với giá 0$, mở khóa tất cả các trang bị hoặc đưa vũ khí, áo giáp từ game này qua game khác</p>
                    </div>
                </div>

            </div>

    </section>

    <!-- support section ends -->
    <!-- footer section starts  -->

    <section class="footer">

        <div class="share">
            <a href="https://www.facebook.com/" class="fab fa-facebook-f"></a>
            <a href="https://twitter.com/" class="fab fa-twitter"></a>
            <a href="https://www.instagram.com/accounts/login/#" class="fab fa-instagram"></a>
            <a href="https://www.youtube.com/" class="fab fa-youtube"></a>
        </div>

        <div class="links">
            <a href="#carouselExampleIndicators">home</a>
            <a href="#loli">điều khoản</a>
            <a href="#menu">menu</a>
            <a href="#top-3-game">Game Hot</a>
            <a href="#support">support</a>
        </div>

    </section>

    <!-- footer section ends -->
    <!-- custom js file link  -->

    <script src="~/js/Script.js"></script>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/Scriptloader.js"></script>
    <style>
        .header {
            position: fixed;
        }
    </style>

</body>
</html>
